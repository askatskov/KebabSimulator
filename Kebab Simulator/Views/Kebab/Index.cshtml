@model IEnumerable<Kebab_Simulator.Models.KebabModels.KebabIndexViewModel>

@{ int rowNumber = 1; }
<div>
    <a asp-action="Add" asp-controller="Kebab" type="submit" class="btn btn-primary">Go make a kebab to earn money</a>
    <a asp-action="Create" asp-controller="Kebab" type="submit" class="btn btn-primary">Make new character</a>
</div>


@* User can go and make a kebab using ADD function, to earn money. In controller, this is called "PlayerSoloMission" *@

<div class="h1">Kebab Simulator</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Level</th>
                <th scope="col">BankAccount</th>
                <th scope="col">Admin Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var Kebab in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@Kebab.KebabName</td>
                    <td>@Kebab.KebabLevel</td>
                    <td>@Kebab.KebabBankAccount</td>
                    <td>
                        <a asp-action="Details" asp-controller="kebab" asp-route-id="@Kebab.ID" class="btn btn-info">KebabDetails</a>
                        <br />
                    <td>
                        <a asp-action="Update" asp-controller="kebab" asp-route-id="@Kebab.ID" class="btn btn-info">KebabConfigure</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-controller="kebab" asp-route-id="@Kebab.ID" class="btn btn-info">DeleteKebab</a>
                    </td>
                    </td>
                    @*<td>
                       @foreach (var image in Model.Image)
                        {
                            <partial name="_Images" model="images" />
                        }
                    </td> *@

                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>