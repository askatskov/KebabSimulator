@model Kebab_Simulator.Models.KebabModels.KebabDeleteViewModel

<h1> @Html.DisplayFor(model => model.KebabName)</h1>

<div>
    <h4>The choice is yours. </h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="ID" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.ID)
        </div>
        <div class="form-group row">
            <label asp-for="KebabName" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.KebabName)
        </div>
        <div id="imagediv">
            @foreach (var image in Model.Image)
            {
                <partial name="_Images" model="image" />
            }
        </div>
        <div class="form-group row">
            <label asp-for="KebabXP" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.KebabXP)
        </div>

        <div class="form-group row">
            <label asp-for="KebabXPNextLevel" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.KebabXPNextLevel)
        </div>

        <div class="form-group row">
            <label asp-for="KebabStatus" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.KebabStatus)
        </div>

        <div class="form-group row">
            <label asp-for="KebabBankAccount" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.KebabBankAccount)
        </div>

        <div class="form-group row">
            <label asp-for="Checkout" class="col-sm-2" col-form-label></label>
            @Html.DisplayFor(model => model.Checkout)
        </div>
    </dl>
    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <a asp-action="index" asp-controller="Kebab" class="btn btn-secondary">Go back</a>
</div>